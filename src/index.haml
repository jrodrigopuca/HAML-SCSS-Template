/ Starter template HAML/SCSS v0.02

-# Basic information
-@autor="jarp"
-@lang= "en"
-@title= "Hello World!"
-@description= "My awesome template"
-@keywords="keyword1, keyword2, keywordn"

-# Basic libraries
-@BootstrapV= "4.0.0-alpha.6"
-@TetherV="1.4.0"
-@NormalizeV="5.0.0"
-@jQueryV="3.1.1"
-@FontAwesomeV="4.7.0"

-# Basic nav items/sections
-menu =["section-1", "section-2", "section-3", "section-n"]

!!!5
%html
    %head{class:"no-js",lang:@lang}

        /Metadata
        %meta{charset:"utf-8"}
        %meta{'http-equiv':"x-ua-compatible", content:"ie-edge"}
        %title= @title
        %meta{name:"description", content:@description}
        %meta{name:"keywords", content:@keywords}
        %meta{name:"author", content:@autor}
        %meta{name:"viewport", content:"width=device-width, initial-scale=1, shrink-to-fit=no"}

        /Styles
        %link{rel:"stylesheet",href:"https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/"+@BootstrapV+"/css/bootstrap.min.css"}
        %link{rel:"stylesheet", href:"https://cdnjs.cloudflare.com/ajax/libs/normalize/"+@NormalizeV+"/normalize.min.css"}
        %link{rel:"stylesheet", href:"https://cdnjs.cloudflare.com/ajax/libs/font-awesome/"+@FontAwesomeV+"/css/font-awesome.min.css"}
        %link{rel:"stylesheet",href:"./css/styles.css"}

    %body

        /NavBar
        %nav.navbar.navbar-toggleable.navbar-inverse.fixed-top
            %a.navbar-brand{href:"#"}= @title
            %button.navbar-toggler.navbar-toggler-right{type:"button","data":{"toggle":"collapse", "target":"#MyNavbar" },  "aria":{"controls":"MyNavBar", "expanded":"true"}}
                %span.navbar-toggler-icon
            .collapse.navbar-collapse#MyNavbar
                .navbar-nav
                    -menu.each do |item|
                        %a.nav-item.nav-link{href:'#'+"#{item}"}= item

        /Header
        %header.jumbotron-fluid.text-center
            %h1.display-2= @title
            %p.lead= @description

        /Main
        %main
            -# Please replace this with your own sections (this is just an example)
            -menu.each do |item|
                %section.full.text-center{id:"#{item}"}
                    %h1.display-4= item
                    .content
                        %h2 sub-title
                        %p
                            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc vitae imperdiet nulla.
                            Donec dapibus et leo in condimentum. Phasellus eu faucibus orci. Maecenas ullamcorper ex in massa porta fermentum.
                            Sed tempor urna vitae diam accumsan varius. Proin venenatis dolor in mi sodales, sit amet blandit lectus venenatis.
                            Duis sagittis laoreet mollis. Morbi imperdiet enim at tortor convallis, id consectetur lacus.
                        .card
                            .card-block
                                %h4.card-title Card title
                                %p.card-text
                                    Nulla consectetur suscipit venenatis. In hac habitasse platea dictumst. Proin nec ex sit amet dolor venenatis
                                    consectetur in vel ex. Nulla non placerat felis. Phasellus euismod condimentum venenatis. Nullam et fringilla
                                    arcu, eu consequat velit.
        /Footer
        %footer.w-100
            %p.text-center=@title+" - Develop by "+@autor

        /Scripts
        %script{src:"https://cdnjs.cloudflare.com/ajax/libs/jquery/"+@jQueryV+"/jquery.js"}
        %script{src:"https://cdnjs.cloudflare.com/ajax/libs/tether/"+@TetherV+"/js/tether.min.js"}
        %script{src:"https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/"+@BootstrapV+"/js/bootstrap.min.js"}
        %script{src:"./js/main.js"}
